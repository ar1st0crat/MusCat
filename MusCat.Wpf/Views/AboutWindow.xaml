<UserControl x:Class="MusCat.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="160" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0"
               Source="../Images/MusCat.ico"
               Width="30"
               Margin="10,0,0,0" />
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="(c) 2017-2021 ar1st0crat" 
                       Margin="20,20,20,0"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Please visit MusCat website:"
                       Margin="20,20,20,0"
                       HorizontalAlignment="Center" />
            <TextBlock Margin="20"
                       HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://github.com/ar1st0crat/MusCat">https://github.com/ar1st0crat/MusCat</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
